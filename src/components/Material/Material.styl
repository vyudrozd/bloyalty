@import "~styles/_import";

.wrap
  width 100%
  height 54px
  padding 16px
  overflow hidden
  border-radius 8px
  border 1px solid $gray400
  font-weight 600
  cursor pointer
  display flex
  align-items center
  &:hover
    color $orange400
    .icon
      svg
        path
          fill $orange400

.infoContainer
  margin-left 16px
  text-overflow ellipsis
  display inline-block
  flex 1 0 0

.materialName
  font-size 16px
  line-height 22px

.authorName
  margin-top 8px
  font-size 12px
  line-height 14px

.icon
  flex 0 0 24px
  size 24px
  svg
    width 24px
    height 24px
