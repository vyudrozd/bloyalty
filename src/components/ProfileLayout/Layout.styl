@import "~styles/_import";

.wrap
  padding-top 24px
  background-color $gray100
  height 100%
  min-height calc(100vh - 64px)
  width 100%

.whiteBox
  background-color #ffffff
  border-radius 2px

.paddingRemover
  padding-top 0 !important

.leftPart
  width 100%
  padding 16px
  display flex
  align-items center
  flex-direction column

.imgContainer
  size 180px
  border 1px solid $gray200
  border-radius 4px
  img
    width 100%
    object-fit contain

.tabsTitle
  margin-top 24px
  align-self flex-start
  font-family $fontFamily
  font-weight 700
  font-size 16px
  line-height 22px

.linkTabs
  list-style-type none
  width calc(100% + 32px)
  a
    display inline-block
    cursor pointer
    width 100%
    padding 8px
    border-top 1px solid $gray400
    &:first-child
      margin-top 12px
      border-top 0
    &:hover, &.active
      color #fff
      background-color $velvet500
      -webkit-box-shadow 3px 0px 5px 0px rgba(50, 50, 50, 0.65);
      -moz-box-shadow 3px 0px 5px 0px rgba(50, 50, 50, 0.65);
      box-shadow 3px 0px 5px 0px rgba(50, 50, 50, 0.65);


.smallInfo
  margin-top 24px
  width 100%

.smallInfoContainer
  display flex
  align-items center
  justify-content center
  font-size 13px
  line-height 18px

.votesToday
  padding 16px
  width 50%
  border-right 1px solid $gray400
  display flex
  flex-direction column
  align-items center
  text-align center

.votesTodayCount
  color $velvet500
  font-size 32px
  line-height 38px

.votesTotal
  padding 16px
  width 50%
  display flex
  flex-direction column
  align-items center
  text-align center

.votesTotalCount
  color $orange500
  font-size 32px
  line-height 38px

.profileHint
  margin-top 16px
  text-align center

.hintText
  font-size 11px
  line-height 13px

.rightPart
  width 100%
  height 100%
  padding 16px