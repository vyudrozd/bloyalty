@import './_vars.styl'

// hide-mobile, hide-moremobile etc
for s in 'small' 'mobile' 'tablet' 'md' 'desc' 'l' 'page'
	moresize = 'more-' + s
	.hide-{s}
		@media s
			display none !important
	.hide-more{s}
		@media moresize
			display none !important

.hidden,
[hidden]
	display none


.mt0
	margin-top 0

.mb0
	margin-bottom 0

.m0
	margin-top 0
	margin-bottom 0

.row--bitrix
	position relative

.pd120
	padding-top 120px
	padding-bottom 120px

.pd60-tablet
	@media tablet
		padding-top 60px
		padding-bottom 60px

.pdAll
	@media (max-width: 1700px)
		padding-left 40px
		padding-right 40px
	@media md
		padding-left 20px
		padding-right 20px
	@media (max-width: 1280px)
		padding-left 40px
		padding-right 40px
	@media mobile
		padding-left 0
		padding-right 0

.pd-all-small-padding
	@media (max-width: 1700px)
		padding-left 40px
		padding-right 40px
	@media md
		padding-left 80px
		padding-right 80px
	@media (max-width: 1280px)
		padding-left 40px
		padding-right 40px
	@media mobile
		padding-left 0
		padding-right 0

.pd-l
	@media md
		padding-left 100px
	@media (max-width: 1280px)
		padding-left 60px
	@media mobile
		padding-left 20px

.pr-r
	@media md
		padding-right 100px
	@media (max-width: 1280px)
		padding-right 60px
	@media mobile
		padding-right 20px

.no-pd-l
	@media (max-width: 1600px)
		padding 0

.hide-650
	@media (max-width: 650px)
		display none

.maxw1040
	max-width 1040px

.section--gray
	background-color #f0f0f0

.gray-text
	color #686868

.blue-text
	color $blue500

// common classes
.hide-descmd
	@media (max-width: 1560px)
		display none

.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px

.home-margin
	margin-bottom 40px

.link
	color $blue500
	cursor pointer
	&:hover
		color #000
	&_black
		color #000
		&:hover
			color $blue500
	&_gray
		color $gray500
		&:hover
			color $blue500
			cursor pointer

.capitalize
	text-transform capitalize

.overlay
	background-color alpha(#000000, 0.4)
	position fixed
	top 0
	left 0
	width 100vw
	height 100vh
	z-index -1
	@media screen and (max-width: 450px)
		display none

.break
	flex-basis 100%
	height 0
